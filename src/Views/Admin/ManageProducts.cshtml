@model IEnumerable<Shop.Models.Product>
@{
    ViewData["Title"] = "Manage Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary me-3">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
    <h1 class="display-5 text-success">Manage Products</h1>
    <a asp-controller="Admin" asp-action="CreateProduct" class="btn btn-success btn-lg">
        <i class="bi bi-plus-circle"></i> Add New Product
    </a>
</div>

<hr />

@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        Products are not found. Start with adding a new product.
    </div>
}
else
{
    <table class="table table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category ID</th>
                <th>Country</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.isDeleted ? "table-danger text-muted" : "")">
                    <td>@item.ProductId</td>
                    <td>
                        @if (item.Picture != null && item.Picture.Length > 0)
                        {
                            <img src="@Url.Action("GetProductImage", "Home", new { id = item.ProductId })"
                                                  alt="@item.ProductName Picture"
                                                  style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;" />
                        }
                        else
                        {
                            <i class="bi bi-image" title="No Image" style="font-size: 1.5rem; color: #6c757d;"></i>
                        }
                    </td>
                    <td>@item.ProductName</td>
                    <td>@item.CategoryId</td>
                    <td>@item.ProductCountry</td>
                    <td>@item.Price.ToString("C", new System.Globalization.CultureInfo("uk-UA"))</td>
                    <td>@item.StockQuantity</td>
                    <td>
                        @if (item.isDeleted)
                        {
                            <span class="badge bg-danger">Deleted</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Active</span>
                        }
                    </td>
                    <td>
                        @if (item.isDeleted)
                        {
                            <form asp-action="RestoreProduct" asp-route-id="@item.ProductId" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-warning">
                                    <i class="bi bi-arrow-counterclockwise"></i> Restore
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Admin" asp-action="EditProduct" asp-route-id="@item.ProductId" class="btn btn-sm btn-primary me-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <form asp-action="DeleteProduct" asp-route-id="@item.ProductId" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Are you sure you want to delete @item.ProductName?');">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.js"></script>
}