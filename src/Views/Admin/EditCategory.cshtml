@model Shop.DTOs.CategoryDto
@{
    ViewData["Title"] = "Edit Category";
}

<h1 class="display-5 text-primary">Edit Category: @Model.CategoryName</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditCategory" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="CategoryId" />

            <div class="mb-3">
                <label asp-for="CategoryName" class="form-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary me-2">Save Changes</button>
            <a asp-action="ManageCategories" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}