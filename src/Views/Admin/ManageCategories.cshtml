@model IEnumerable<Shop.Models.Category>
@{
    ViewData["Title"] = "Manage Categories";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary me-3">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
    <h1 class="display-5 text-info">Manage Categories</h1>
    <a asp-controller="Admin" asp-action="CreateCategory" class="btn btn-info btn-lg">
        <i class="bi bi-plus-circle"></i> Add New Category
    </a>
</div>

<hr />

@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        Categories are not found.
    </div>
}
else
{
    <table class="table table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Category Name</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.isDeleted ? "table-danger text-muted" : "")">
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>
                        @if (item.isDeleted)
                        {
                            <span class="badge bg-danger">Deleted</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Active</span>
                        }
                    </td>
                    <td>
                        @if (item.isDeleted)
                        {
                            <form asp-action="RestoreCategory" asp-route-id="@item.CategoryId" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-warning">
                                    <i class="bi bi-arrow-counterclockwise"></i> Restore
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Admin" asp-action="EditCategory" asp-route-id="@item.CategoryId" class="btn btn-sm btn-primary me-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form asp-action="DeleteCategory" asp-route-id="@item.CategoryId" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Are you sure you want to delete @item.CategoryName?');">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.js"></script>
}