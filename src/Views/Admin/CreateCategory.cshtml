@model Shop.DTOs.CategoryDto
@{
    ViewData["Title"] = "Create New Category";
}

<h1 class="display-5 text-info">Create New Category</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateCategory" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="CategoryName" class="form-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-info me-2">Save Category</button>
            <a asp-action="ManageCategories" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}