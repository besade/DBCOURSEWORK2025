@model Shop.ViewModels.UserProfileViewModel

<div class="container mt-4">
    <h2>My Profile</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@Model.Customer.FirstName @Model.Customer.LastName</h5>
                    <p class="card-text"><strong>Email:</strong> @Model.Customer.Email</p>
                    <p class="card-text"><strong>Phone:</strong> @Model.Customer.PhoneNumber</p>
                    <p class="card-text"><strong>Date of Birth:</strong> @Model.Customer.DateOfBirth</p>
                    <a class="btn btn-danger w-100" asp-controller="Account" asp-action="Logout">Logout</a>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h4>Order History</h4>
            @if (!Model.Orders.Any())
            {
                <div class="alert alert-light">You haven't placed any orders yet.</div>
            }
            else
            {
                <div class="accordion" id="ordersAccordion">
                    @foreach (var order in Model.Orders)
                    {
                        var total = order.OrderItems.Sum(i => i.Quantity * i.UnitPrice);
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading-@order.OrderId">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@order.OrderId">
                                    Order #@order.OrderId (@order.OrderDate) - <span class="badge bg-info text-dark ms-2">@order.OrderStatus</span>
                                    <span class="ms-auto me-3 fw-bold">@total.ToString("C")</span>
                                </button>
                            </h2>
                            <div id="collapse-@order.OrderId" class="accordion-collapse collapse" data-bs-parent="#ordersAccordion">
                                <div class="accordion-body">
                                    <ul class="list-group list-group-flush">
                                        @foreach (var item in order.OrderItems)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                @item.Product.ProductName (@item.Quantity)
                                                <span>@((item.UnitPrice * item.Quantity).ToString("C"))</span>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>