@model Shop.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Products Catalog";
    int? currentCategoryId = ViewBag.CurrentCategoryId;
}

<div class="container mt-5">
    <h1 class="text-center mb-5 display-4 text-success">Products Catalog</h1>

    <div class="d-flex flex-wrap justify-content-center mb-5">

        <a asp-action="Index" asp-route-categoryId=""
           class="btn btn-outline-secondary me-2 mb-2 @(!currentCategoryId.HasValue ? "active" : "")">
            All Products
        </a>

        @foreach (var category in Model.Categories)
        {
            <a asp-action="Index" asp-route-categoryId="@category.CategoryId"
               class="btn btn-outline-primary me-2 mb-2 @(currentCategoryId == category.CategoryId ? "active" : "")">
                @category.CategoryName
            </a>
        }
    </div>


    @if (!Model.Products.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            No active products at the time
        </div>
    }
    else
    {
        <h3 class="mb-4">
            @if (currentCategoryId.HasValue)
            {
                var category = Model.Categories.FirstOrDefault(c => c.CategoryId == currentCategoryId);
                <span>Category: @(category?.CategoryName ?? "Unknown Category")</span>
            }
            else
            {
                <span>All Products</span>
            }
        </h3>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var product in Model.Products)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">

                        @if (product.Picture != null && product.Picture.Length > 0)
                        {
                            <img src="@Url.Action("GetProductImage", "Home", new { id = product.ProductId })"
                                 class="card-img-top"
                                 alt="@product.ProductName"
                                 style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="text-center bg-light py-5">
                                <i class="bi bi-card-image" style="font-size: 3rem; color: #ccc;"></i>
                                <p class="text-muted">No Image</p>
                            </div>
                        }

                        <div class="card-body">
                            <h5 class="card-title">@product.ProductName</h5>
                            <p class="card-text text-muted">@product.ProductCountry</p>
                            <p class="card-text fw-bold">@product.Price.ToString("C", new System.Globalization.CultureInfo("uk-UA"))</p>
                        </div>
                        <div class="card-footer bg-white border-0 d-grid">
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="id" value="@product.ProductId" />
                                <input type="hidden" name="quantity" value="1" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />

                                @{
                                    var cartContents = ViewBag.CartContents as Dictionary<int, int>;

                                    int quantityInCart = 0;

                                    bool isInCart = cartContents != null
                                    && cartContents.TryGetValue(product.ProductId, out quantityInCart);
                                }
                                @if (product.StockQuantity <= 0)
                                {
                                    <button type="button" class="btn btn-secondary w-100" disabled>Out of Stock</button>
                                }
                                else if (isInCart)
                                {
                                    <a href="@Url.Action("Index", "Cart")" class="btn btn-warning w-100">
                                        <i class="bi bi-cart-check"></i> Already in Cart (@quantityInCart)
                                    </a>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="bi bi-cart-plus"></i> Buy
                                    </button>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<br>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@i"
                   asp-route-categoryId="@Model.SelectedCategoryId">@i</a>
            </li>
        }
    </ul>
</nav>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}